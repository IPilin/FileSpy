<Window x:Class="FileSpy.Windows.VideoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileSpy.Windows"
        mc:Ignorable="d"
        Title="VideoWindow" Height="450" Width="800" MouseMove="Window_MouseMove"
        WindowStartupLocation="CenterOwner" FontFamily="/FileSpy;component/Resources/#Ubuntu" Closed="Window_Closed">
    <Grid>
        <Image x:Name="ImageTable"/>
        <Label FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center">Waiting for responce.</Label>
        <Grid x:Name="V" VerticalAlignment="Bottom" Height="100">
            <Border Margin="0,5,0,5" CornerRadius="5" Background="Gray" Opacity="0.8" Width="300">
                <Grid>
                    <Grid Margin="0,0,150,0">
                        <CheckBox IsChecked="True" VerticalAlignment="Top" FontSize="14" HorizontalAlignment="Left" Margin="5">Video</CheckBox>
                        <Label FontSize="14" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,15,0,0">FPS</Label>
                        <TextBox Margin="60,20,0,0" FontSize="14" VerticalAlignment="Top" HorizontalAlignment="Left" Width="30">10</TextBox>
                        <CheckBox Margin="5,40,0,0" VerticalAlignment="Top" FontSize="14" HorizontalAlignment="Left">FpsCounter</CheckBox>
                        <CheckBox Margin="5,60,0,0" VerticalAlignment="Top" FontSize="14" HorizontalAlignment="Left">Security</CheckBox>
                    </Grid>
                    <Grid Margin="150,0,0,0">
                        <Grid Margin="0,0,0,45">
                            <CheckBox Margin="5" FontSize="14" VerticalAlignment="Top" HorizontalAlignment="Left">Micro</CheckBox>
                            <Slider Maximum="200" Value="100" TickFrequency="10" IsSnapToTickEnabled="True" VerticalAlignment="Bottom"/>
                        </Grid>
                        <Grid Margin="0,45,0,0">
                            <CheckBox Margin="5" FontSize="14" VerticalAlignment="Top" HorizontalAlignment="Left">Audio</CheckBox>
                            <Slider Maximum="200" Value="100" TickFrequency="10" IsSnapToTickEnabled="True" VerticalAlignment="Bottom"/>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
