<Window x:Class="FileSpy.Windows.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileSpy.Windows"
        mc:Ignorable="d"
        Title="LoadingWindow" Height="150" Width="300" FontFamily="/FileSpy;component/Resources/#Ubuntu"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Label x:Name="FileNameLabel" Margin="0,-100,0,0" VerticalAlignment="Center" HorizontalAlignment="Center">FileSpy.exe</Label>
        <Label x:Name="CountLabel" Margin="0,-50,0,0" VerticalAlignment="Center" HorizontalAlignment="Center">112KB/23GB</Label>
        <ProgressBar x:Name="ProgressBar" Maximum="100" Height="20" Margin="10"></ProgressBar>
        <Label x:Name="StatusLabel" Margin="0,50,0,0" VerticalAlignment="Center" HorizontalAlignment="Center">122KB/s</Label>
    </Grid>
</Window>
